{
  "name": "craftedtales-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy": "turbo run deploy",
    "deploy:api": "pnpm --filter @craftedtales/api run deploy",
    "deploy:web": "pnpm --filter @craftedtales/web run deploy"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=18"
  }
}